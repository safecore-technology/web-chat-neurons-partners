# Configurações do servidor
PORT=3001
NODE_ENV=development

# JWT Secret para autenticação
JWT_SECRET=e9030cc250f37bb04f0d8dd3a99e12a3

# Configurações Evolution API
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua_chave_evolution_api_aqui

# Configurações do Supabase (OBRIGATÓRIO - configure com suas credenciais)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# API Key para autenticação em iframe (gere uma chave segura de pelo menos 32 caracteres)
IFRAME_API_KEY=your-secure-api-key-for-iframe-access-min-32-chars

# Registro de usuários (true = permite registro público, false = apenas admin cria usuários)
ALLOW_USER_REGISTRATION=true

# Modo iframe (true = funciona sem login, false = requer autenticação)
IFRAME_MODE=true

# Configurações de upload
UPLOAD_MAX_SIZE=50MB
UPLOAD_PATH=./uploads

# Configurações de segurança
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=24h

# Configurações de webhook
# DESENVOLVIMENTO: Deixe WEBHOOK_URL vazio para usar ngrok automaticamente
# PRODUÇÃO: Configure uma URL pública acessível (ex: https://seu-dominio.com/webhook)
WEBHOOK_URL=
WEBHOOK_EVENTS=MESSAGE_RECEIVED,MESSAGE_SENT,CONNECTION_UPDATE,PRESENCE_UPDATE,TYPING_UPDATE

# Ngrok configurações (para desenvolvimento)
NGROK_AUTHTOKEN=seu_authtoken_aqui
NGROK_DOMAIN=seu-dominio.ngrok-free.app

# Admin padrão (altere em produção!)
DEFAULT_ADMIN_EMAIL=dev@neurons.ai
DEFAULT_ADMIN_PASSWORD=admin100senha
